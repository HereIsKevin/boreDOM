{
  "name": "boredom",
  "version": "0.10.0",
  "description": "Easily manipulating of the DOM without virtual DOM",
  "type": "module",
  "module": "./dist/esm/index.js",
  "main": "./dist/cjs/index.js",
  "exports": {
    "import": "./dist/esm/index.js",
    "default": "./dist/cjs/index.js"
  },
  "types": "./dist/index.d.ts",
  "scripts": {
    "clean:development": "shx rm -rf ./build/",
    "clean:release": "shx rm -rf ./dist/",
    "clean:examples": "shx rm -f ./examples/**/*.js",
    "clean:tests": "shx rm -f ./tests/*.js",
    "clean:docs": "shx rm -rf ./docs/",
    "clean": "npm-run-all --parallel clean:development clean:release",
    "watch:tsc": "tsc --watch",
    "watch:dts": "tsc --watch --declaration --emitDeclarationOnly --declarationDir ./dist/",
    "watch:bundle:esm": "rollup --watch --config ./rollup.config.esm.js",
    "watch:bundle:cjs": "rollup --watch --config ./rollup.config.cjs.js",
    "watch:bundle": "npm-run-all --parallel watch:bundle:esm watch:bundle:cjs",
    "watch:docs": "typedoc --watch --name boreDOM ./src/index.ts --out ./docs/",
    "watch:examples": "tsc --watch --project ./examples/tsconfig.json",
    "watch:tests": "tsc --watch --project ./tests/tsconfig.json",
    "watch": "npm-run-all --parallel watch:tsc watch:bundle:esm",
    "build:tsc": "tsc",
    "build:dts": "tsc --declaration --emitDeclarationOnly --declarationDir ./dist/",
    "build:bundle:esm": "rollup --config ./rollup.config.esm.js",
    "build:bundle:cjs": "rollup --config ./rollup.config.cjs.js",
    "build:bundle": "npm-run-all --parallel build:bundle:esm build:bundle:cjs",
    "build:development": "npm-run-all --sequential build:tsc build:bundle:esm",
    "build:minify:esm": "terser --config-file ./terser.json --output ./dist/esm/index.min.js -- ./dist/esm/index.js",
    "build:minify:cjs": "terser --config-file ./terser.json --output ./dist/cjs/index.min.js -- ./dist/cjs/index.js",
    "build:minify": "npm-run-all --parallel build:minify:esm build:minify:cjs",
    "build:finish": "shx cp ./package-cjs.json ./dist/cjs/package.json",
    "build:release": "npm-run-all --sequential build:tsc build:bundle build:dts build:minify build:finish",
    "build:docs": "typedoc --name boreDOM ./src/index.ts --out ./docs/",
    "build:examples": "tsc --project ./examples/tsconfig.json",
    "build:tests": "tsc --project ./tests/tsconfig.json",
    "format:check": "prettier --check ./src/ ./examples/ ./tests/ ./*.js ./*.cjs ./*.json ./*.md",
    "format:write": "prettier --write ./src/ ./examples/ ./tests/ ./*.js ./*.cjs ./*.json ./*.md",
    "lint:check": "eslint --ext .ts ./src/",
    "lint:fix": "eslint --fix --ext .ts ./src/",
    "start": "serve"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HereIsKevin/boreDOM.git"
  },
  "keywords": [
    "DOM",
    "html",
    "javascript",
    "ui",
    "fast",
    "webcomponents"
  ],
  "author": "Kevin Feng",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/HereIsKevin/boreDOM/issues"
  },
  "homepage": "https://github.com/HereIsKevin/boreDOM#readme",
  "devDependencies": {
    "@types/chai": "^4.2.18",
    "@types/mocha": "^8.2.2",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "chai": "^4.3.4",
    "eslint": "^7.26.0",
    "mocha": "^8.4.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.0",
    "rollup": "^2.47.0",
    "serve": "^11.3.2",
    "shx": "^0.3.3",
    "terser": "^5.7.0",
    "typedoc": "^0.20.36",
    "typescript": "^4.2.4"
  }
}
