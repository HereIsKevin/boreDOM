{
  "name": "boredom",
  "version": "0.6.0",
  "description": "Easily manipulating of the DOM without virtual DOM",
  "main": "./dist/index.cjs.min.js",
  "scripts": {
    "clean:development": "shx rm -rf ./build/",
    "clean:release": "shx rm -rf ./dist/",
    "clean": "npm-run-all --parallel clean:development clean:release",
    "watch:tsc": "tsc --watch",
    "watch:dts": "tsc --watch --declaration --emitDeclarationOnly --declarationDir ./dist/",
    "watch:bundle:esm": "rollup --watch --config ./rollup.config.esm.js",
    "watch:bundle:cjs": "rollup --watch --config ./rollup.config.cjs.js",
    "watch:bundle": "npm-run-all --parallel watch:bundle:esm watch:bundle:cjs",
    "watch:examples": "tsc --watch --project ./examples/tsconfig.json",
    "watch": "npm-run-all --parallel watch:tsc watch:bundle:esm",
    "build:tsc": "tsc",
    "build:dts": "tsc --declaration --emitDeclarationOnly --declarationDir ./dist/",
    "build:bundle:esm": "rollup --config ./rollup.config.esm.js",
    "build:bundle:cjs": "rollup --config ./rollup.config.cjs.js",
    "build:bundle": "npm-run-all --parallel build:bundle:esm build:bundle:cjs",
    "build:development": "npm-run-all --sequential build:tsc build:bundle:esm",
    "build:minify:esm": "terser --config-file ./terser.json --output ./dist/index.esm.min.js -- ./dist/index.esm.js",
    "build:minify:cjs": "terser --config-file ./terser.json --output ./dist/index.cjs.min.js -- ./dist/index.cjs.js",
    "build:minify": "npm-run-all --parallel build:minify:esm build:minify:cjs",
    "build:dts:copy:esm:minified": "shx cp ./dist/index.d.ts ./dist/index.esm.min.d.ts",
    "build:dts:copy:esm": "shx cp ./dist/index.d.ts ./dist/index.esm.d.ts",
    "build:dts:copy:cjs:minified": "shx cp ./dist/index.d.ts ./dist/index.cjs.min.d.ts",
    "build:dts:copy:cjs": "shx cp ./dist/index.d.ts ./dist/index.cjs.d.ts",
    "build:dts:copy": "npm-run-all --parallel build:dts:copy:esm build:dts:copy:cjs build:dts:copy:esm:minified build:dts:copy:cjs:minified",
    "build:release": "npm-run-all --sequential build:tsc build:bundle build:dts build:minify build:dts:copy",
    "build:docs": "typedoc --name boreDOM ./src/index.ts --out ./docs/",
    "build:examples": "tsc --project ./examples/tsconfig.json",
    "format:check": "prettier --check ./src/ ./examples/ ./*.js ./*.json ./*.md",
    "format:write": "prettier --write ./src/ ./examples/ ./*.js ./*.json ./*.md",
    "lint:check": "eslint --ext .ts ./src/",
    "lint:fix": "eslint --fix --ext .ts ./src/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HereIsKevin/boreDOM.git"
  },
  "keywords": [
    "DOM",
    "html",
    "javascript",
    "ui",
    "fast"
  ],
  "author": "Kevin Feng",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/HereIsKevin/boreDOM/issues"
  },
  "homepage": "https://github.com/HereIsKevin/boreDOM#readme",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/parser": "^3.4.0",
    "eslint": "^7.3.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "rollup": "^2.18.1",
    "shx": "^0.3.2",
    "terser": "^4.8.0",
    "typedoc": "^0.17.7",
    "typescript": "^3.9.3"
  }
}
