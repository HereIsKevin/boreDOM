{
  "name": "boredom",
  "version": "0.2.0",
  "description": "Easily manipulating of the DOM without virtual DOM",
  "main": "dist/index.min.js",
  "scripts": {
    "clean": "rm -rf ./build/; rm -rf ./dist/",
    "watch:tsc": "tsc --watch",
    "watch:rollup": "rollup --watch --config ./rollup.config.js",
    "build:dev": "tsc; rollup --config ./rollup.config.js",
    "build:dts": "tsc --declaration --emitDeclarationOnly --declarationDir ./dist/; cp ./dist/index.d.ts ./dist/index.min.d.ts",
    "build:release": "tsc; rollup --config ./rollup.config.js; terser --config-file ./terser.json --output ./dist/index.min.js -- ./dist/index.js",
    "build:commonjs": "tsc; rollup ./build/index.js --file ./dist/index.js --format cjs; terser --mangle --verbose --output ./dist/index.min.js -- ./dist/index.js",
    "build:docs": "typedoc ./src/ --out ./docs/",
    "format:check": "prettier --check ./src/",
    "format:write": "prettier --write ./src/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HereIsKevin/boreDOM.git"
  },
  "keywords": [
    "DOM",
    "html",
    "javascript",
    "ui",
    "fast"
  ],
  "author": "Kevin Feng",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/HereIsKevin/boreDOM/issues"
  },
  "homepage": "https://github.com/HereIsKevin/boreDOM#readme",
  "devDependencies": {
    "prettier": "^2.0.5",
    "rollup": "^2.10.2",
    "terser": "^4.6.13",
    "typedoc": "^0.17.6",
    "typescript": "^3.9.2"
  }
}
