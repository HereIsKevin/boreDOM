{
  "name": "boredom",
  "version": "0.1.0",
  "description": "Easily manipulating of the DOM without virtual DOM",
  "scripts": {
    "clean": "rm ./build/*",
    "watch:tsc": "tsc --watch",
    "watch:rollup": "rollup --watch --config ./rollup.config.js",
    "build:dev": "tsc; rollup --config ./rollup.config.js",
    "build:release": "tsc; rollup --config ./rollup.config.js; terser --config-file ./terser.json --output ./build/boreDOM.min.js -- ./build/boreDOM.js",
    "build:docs": "typedoc ./src/ --out ./docs/",
    "format:check": "prettier --check ./src/",
    "format:write": "prettier --write ./src/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HereIsKevin/boreDOM.git"
  },
  "keywords": [
    "DOM",
    "html",
    "javascript",
    "ui",
    "fast"
  ],
  "author": "Kevin Feng",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/HereIsKevin/boreDOM/issues"
  },
  "homepage": "https://github.com/HereIsKevin/boreDOM#readme",
  "devDependencies": {
    "prettier": "^2.0.5",
    "rollup": "^2.9.0",
    "terser": "^4.6.13",
    "typedoc": "^0.17.6",
    "typescript": "^3.8.3"
  }
}
